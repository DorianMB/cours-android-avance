<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" tools:text="Title"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="100dp" tools:srcCompat="@tools:sample/backgrounds/scenic"
            tools:layout_editor_absoluteX="0dp" android:id="@+id/imageView2" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:srcCompat="@mipmap/ic_launcher"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/imageView2"
            tools:text="Description : Lorem ipsum dolor sit amet, consectetur adipiscing elit. Curabitur non mauris molestie, interdum augue sit amet, efficitur magna. Vivamus accumsan mattis eros, non lobortis turpis varius vel. Mauris in fermentum justo. Nulla efficitur viverra felis vel tincidunt. Mauris rutrum dolor vel viverra efficitur. Curabitur maximus nibh id lacinia interdum. Pellentesque id tortor sit amet sem laoreet faucibus. Sed at nisl sit amet odio aliquet finibus et et elit. Proin elementum dui dui, at convallis nunc porttitor id."/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" tools:text="Voir le lien"/>
</android.support.constraint.ConstraintLayout>